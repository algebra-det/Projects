<%- include('../partials/header'); -%>
<h1 style="margin-left: 30px;margin-right:50px;margin-bottom: 10px;">Employee Data</h1>

<br>

<div class="" style="margin-left: 20px;margin-right:50px;">
    <div class="col s12">
        <% if(items.length > 0) { %>
            <table class="table">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Name</th>
                        <th>Bill</th>
                    </tr>
                </thead>
                <tbody>
                    <% items.forEach(function(item, index) { %>
                        <tr>
                            <td style="width:1%; text-align:center"><%= index + 1 %></td>
                            <td style="width: 49%;"><%= item.name %></td>
                            <td style="width: 20%;"><%= item.bill %></td>
                            <td>
                                <a href="/event/edit/<%= item.id%>" class="btn btn-success">Edit</a>
                                <a href="/event/delete/<%= item.id%>" class="btn btn-danger">Delete</a>
                            </td>
                        </tr>
                    <% }); %>
                </tbody>
            </table>
        <% }else{ %>
            <p><strong>There are no records available</strong></p>
        <% } %>
    </div>
</div>
<div class="" style="margin-left: 20px;margin-right:50px;">
    <div class="col s12">
        <a href="/event/add" class="btn btn-success btn-lg">Add a new Data</a>
    </div>
</div>

<%- include('../partials/footer'); -%>